# .astylerc
# http://astyle.sourceforge.net/astyle.html

--mode=c
--style=google
--indent=force-tab=4
--indent-switches
--convert-tabs
--pad-oper
--unpad-paren
--align-pointer=name
--align-reference=none
--max-code-length=100
--max-continuation-indent=80
--min-conditional-indent=0
--break-after-logical
--preserve-date
--suffix=none
--exclude=demo
--exclude=deps
--exclude=docs
--exclude=src/util
--exclude=src/redismodule.h
--exclude=src/redisearch_api.h